body {
	font-family: sans-serif;
}

.container {
	width: 100%;
	height: 100vh;
	display: flex;
	justify-content: center;
	align-items: center;
}

.card {
	height: 400px;
	width: 500px;
	background-image: url('bkg.jpg');
	background-position: center;
	background:-repeat: no-repeat;	
	background-size: cover;
	display: flex;
	justify-content: center;
	align-items: center;
	filter: grayscale(0.5);
	color: white;
	cursor: pointer;
	transition: 0.3s;
}